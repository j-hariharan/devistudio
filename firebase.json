{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
      {
        "source": "/",
        "destination": "/index_compiled.html"
      },
      {
        "source": "/index.html",
        "destination": "/index_compiled.html"
      }
    ],

    "headers": [ {
      "source": "/live/**",
      "headers": [ {
        "key": "Cache-Control",
        "value": "no-store"
      } ]
    }
   ]
  }
}
